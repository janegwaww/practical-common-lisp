(define-struct inex [mantissa sign exponent])
; An Inex is a structure: 
;   (make-inex N99 S N99)
; An S is one of:
; – 1
; – -1
; An N99 is an N between 0 and 99 (inclusive).

(define (inex+ i1 i2)
  (make-inex (+ (inex-mantissa i1) (inex-mantissa i2))
             (if (> (inex-sign i1) (inex-sign i2)) 1 -1)
             (inex-exponent i1)))

(define (oscillate n)
  (local ((define (O i)
            (cond
              [(> i n) '()]
              [else
               (cons (expt #i-0.99 i) (O (+ i 1)))])))
    (O 1)))